 <section class="py-16 md:py-24 bg-default">
  <div class="container mx-auto">
    <div class="text-center">
      <h2 class="playfair text-4xl mb-12 font-extralight">Featured Work</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% @COVERS.each do |cover| %>
        <div class="aspect-[3/4] overflow-hidden rounded-md fade-in">
          <%= image_tag asset_path(cover[:image]), class: "rounded-lg w-full h-full object-cover hover:scale-105 transition-transform duration-700" %>
        </div>
      <% end %>
    </div>
    <div class="mt-12 text-center">
     <button class="bg-gold-default hover:bg-gold-dark font-medium cursor-pointer text-white px-6 py-2 mx-2 rounded-lg">View Full Portfolio</button>
    </div>
  </div>
 </section>
